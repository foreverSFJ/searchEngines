	<!-- 看书中网站最近正在重整 -->
	<site>
		<title>看书中</title>
		<charset>gbk</charset>
		<url>http://www.kanshuzhong.com</url>
		<chapter-list-selector>ul.mulu_list li a</chapter-list-selector>
		<chapter-content-title-selector>h1</chapter-content-title-selector>
		<chapter-content-content-selector>#htmlContent</chapter-content-content-selector>
		<chapter-content-prev-selector>.chapter_Turnpage a,0</chapter-content-prev-selector>
		<chapter-content-next-selector>.chapter_Turnpage a,2</chapter-content-next-selector>
		<!-- 需要重新定义 -->
		<novel-selector>.rec_rullist ul</novel-selector>
		<novel-next-page-selector>#pagelink .next</novel-next-page-selector>
	</site>
	<site>
		<title>顶点小说</title>
		<charset>gbk</charset>
		<url>https://www.x23us.com</url>
		<chapter-list-selector>tr td a</chapter-list-selector>
		<chapter-content-title-selector>#amain h1,0</chapter-content-title-selector>
		<chapter-content-content-selector>#contents</chapter-content-content-selector>
		<chapter-content-prev-selector>#footlink a,0</chapter-content-prev-selector>
		<chapter-content-next-selector>#footlink a,2</chapter-content-next-selector>
		<novel-selector>#content dd tr</novel-selector>
		<novel-next-page-selector>#pagelink .next</novel-next-page-selector>
	</site>
	<site>
		<title>笔趣阁</title>
		<charset>gbk</charset>
		<url>http://www.biquyun.com/</url>
		<chapter-list-selector>#list dd a</chapter-list-selector>
		<chapter-content-title-selector>.bookname h1</chapter-content-title-selector>
		<chapter-content-content-selector>#content</chapter-content-content-selector>
		<chapter-content-prev-selector>.bottem2 a,1</chapter-content-prev-selector>
		<chapter-content-next-selector>.bottem2 a,3</chapter-content-next-selector>
		<!-- 完整小说库不可见 -->
	</site>
	<site>
		<title>笔下文学</title>
		<charset>UTF-8</charset>
		<url>https://www.bxwx9.org</url>
		<chapter-list-selector>#TabCss dd a</chapter-list-selector>
		<chapter-content-title-selector>#title</chapter-content-title-selector>
		<chapter-content-content-selector>#content</chapter-content-content-selector>
		<chapter-content-prev-selector>#footlink a,2</chapter-content-prev-selector>
		<chapter-content-next-selector>#footlink a,4</chapter-content-next-selector>
		<novel-selector>.grid tbody tr</novel-selector>
		<novel-next-page-selector>#pagelink .next</novel-next-page-selector>
